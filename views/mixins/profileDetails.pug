mixin profileDetails()
    div
        h1.mb-1.font-weight-bold #{user.fullname}

        h2.text-secondary @#{user.username}

        div.text-secondary.mt-3
            i.fa.fa-calendar.mr-2
            span Joined #{moment(user.creationDatet).format('ll')}

        div.mt-3 
            span.text-dark.font-weight-bold #{user.following.length} 
            span.text-secondary Following
            span.text-dark.font-weight-bold.ml-3 #{user.followers.length} 
            span.text-secondary Followers